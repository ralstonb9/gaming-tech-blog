<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Create a New Blog Post:</h3>

    <form class='form new-post-form'>
      <div class='form-group'>
        <label for='post-name'>name:</label>
        <input class='form-input' type='text' id='post-name' name='post-name' />
      </div>
      <div class='form-group'>
        <label for='post-desc'>description:</label>
        <textarea class='form-input' id='post-desc' name='post-desc'></textarea>
      </div>
      <div class='form-group'>
        <input id='post-id' type='hidden' name='post-id' value='' />
        <button
          id='form-submit-btn'
          type='submit'
          class='btn btn-primary'
        >Create</button>
      </div>
    </form>
  </div>

  {{posts.length}}
  <div class='col-md-6 post-list'>
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
      <div class='row mb-2'>
        <div class='col-md-8'>
          <h4><a href='/post/{{post.id}}'>{{post.name}}</a></h4>
        </div>
        <div class='col-md-4'>
          <button
            id='edit-btn'
            class='btn btn-sm btn-warning'
            data-id='{{post.id}}'
            data-name='{{post.name}}'
            data-description='{{post.description}}'
          >EDIT</button>
          <button
            id='delete-btn'
            class='btn btn-sm btn-danger'
            data-id='{{post.id}}'
          >DELETE</button>
        </div>
      </div>
    {{/each}}
  </div>

</div>

<script src='/js/profile.js'></script>